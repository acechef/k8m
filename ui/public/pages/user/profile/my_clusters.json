{
    "type": "page",
    "title": "集群权限",
    "remark": {
        "body": "用户拥有的集群权限列表，如需增加权限，请联系平台管理员。",
        "icon": "question-mark",
        "placement": "right",
        "trigger": "click",
        "rootClose": true
    },
    "body": [
        {
            "type": "crud",
            "id": "myClustersCRUD",
            "name": "myClustersCRUD",
            "autoFillHeight": true,
            "api": "get:/mgm/user/profile/cluster/permissions/list",
            "columns": [
                {
                    "name": "username",
                    "label": "用户名"
                },
                {
                    "name": "cluster",
                    "label": "集群名称",
                    "sortable": true
                },
                {
                    "name": "role",
                    "label": "权限",
                    "type": "mapping",
                    "map": {
                        "cluster_admin": "集群管理员",
                        "cluster_readonly": "集群只读"
                    }
                },
                {
                    "name": "created_at",
                    "label": "授权时间",
                    "type": "datetime"
                },
                {
                    "name": "created_by",
                    "label": "授权人"
                }
            ]
        }
    ]
}